<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_centerInParent="true"

    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/profilecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="286dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                app:srcCompat="@drawable/gradient_background" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="53dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="156dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"

                    android:cropToPadding="true"
                    app:srcCompat="@drawable/userpic1" />
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="236dp"
                android:text="Name" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>






    <Button
        android:id="@+id/terms_and_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilecard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:drawableLeft="@drawable/termsandcondition"

        android:text="  Terms and conditions"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@color/light"
        android:textSize="16dp" />

    <Button
        android:id="@+id/privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/terms_and_conditions"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/privacy"

        android:text="  Privacy"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@color/light"
        android:textSize="16dp" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacy"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/feedback"
        android:text="  Feedback"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@color/light"
        android:textSize="16dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:textAlignment="viewStart"
        android:background="@color/light"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16dp" />


</RelativeLayout>
